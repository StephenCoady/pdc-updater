FROM centos

WORKDIR /build

RUN yum -y update && \
    yum -y install epel-release && \
    yum -y install \
        --setopt=deltarpm=0 \
        --setopt=install_weak_deps=false \
        --setopt=tsflags=nodocs \
        gcc \
        gcc-c++ \
        krb5-devel \
        libffi-devel \
        openssl-devel \
        python3-devel \
        python3-pip \
        redhat-rpm-config \
        swig \
        zeromq-devel \
        rpm-devel \
        python3-koji \
        libmodulemd && \
    yum clean all

COPY . .

RUN pip install --upgrade pip setuptools && \
    python setup.py develop && pip install -r test-requirements.txt

CMD ["pytest", "-v", "pdcupdater/tests/"]
